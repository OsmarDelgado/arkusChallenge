// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  id Int @default( autoincrement() ) @id
  name String @db.VarChar( 50 ) @unique
  description String? @db.VarChar(255)

  // Relation Role-User One-to-Many
  user User[]

  @@map("role")
}

model Profile {
  id Int @default( autoincrement() ) @id
  bio String?
  englishLevel String? @db.VarChar( 50 )
  technicalKnowledge String?
  urlCV String? @db.VarChar( 255 )

  // Relation User-Profile One-to-One
  user User @relation( fields: [ userId ], references: [ id ], onDelete: Cascade )
  userId Int

  @@map("profile")
}

model User {
  id Int @default( autoincrement() ) @id
  username String @db.VarChar( 255 ) @unique
  email String @db.VarChar( 255 ) @unique
  firstName String @db.VarChar( 255 )
  lastName String @db.VarChar( 255 )
  password String @db.VarChar( 255 )

  // Relation User-Profile One-to-One
  profile Profile?

  // Relation Role-User One-to-Many
  role Role @relation( fields: [ roleId ], references: [ id ] )
  roleId Int @default( 3 )

  // Relation Teams-User Many-to-Many
  teams UserTeam[]
  // teams Team[]

  @@map("user")
}

model Team {
  id Int @default( autoincrement() ) @id
  name String @db.VarChar( 255 )

  // Relation Account-Team One-to-Many
  account Account[]

  // Relation Teams-User Many-to-Many
  users UserTeam[]
  // users User[]

  @@map("team")
}

model Account {
  id Int @default( autoincrement() ) @id
  name String @db.VarChar( 50 ) @unique
  client String @db.VarChar( 100 )
  operationChief String @db.VarChar( 150 )

  // Relation Account-Team One-to-Many
  team Team? @relation( fields: [ teamId ], references: [ id ], onDelete: SetNull )
  teamId Int?

  @@map("account")
}

// Test the explicit relation Many-to-Many

model UserTeam {
  user User @relation( fields: [ userId ], references: [ id ], onDelete: Cascade )
  userId Int
  team Team @relation( fields: [ teamId ], references: [ id ], onDelete: Cascade )
  teamId Int
  startDate DateTime @db.Date @default( now() )
  endDate DateTime? @db.Date

  @@id([ userId, teamId ])

  @@map("user_team")
}